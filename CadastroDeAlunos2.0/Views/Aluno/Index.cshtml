
@model IEnumerable<AulasModel>

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-5" >
        <h1>Aulas</h1>
        <a class="btn btn-success mx-2" asp-controller="Aluno" asp-action="Cadastrar"><i class="bi bi-person-add mx-2"></i>Cadastrar nova Aula</a>
    </div>

    @if(TempData["MensagemSucesso"] != null) @* logica e estilização da mensagem de sucesso apois qualquer alteração nos dados pelo o usuario *@
    {
        <div class="alert alert-success d-flex align-items-center" role="alert">

            <symbol id="info-fill" viewBox="0 0 16 16">
                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                @TempData["MensagemSucesso"]
            </symbol>
        </div>
    }
    
    @if (TempData["MensagemErro"] != null) @* logica e estilização da mensagem de erro caso qualquer alteração nos dados não tenha exito no salvamento *@
    {
        <div class="alert alert-danger d-flex align-items-center" role="alert">

            <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                @TempData["MensagemErro"]
            </symbol>
        </div>
    }

<table id="Aulas" class="table table-hover">  @* dando um ID para tabela, para poder estár usando os filtros já exportados *@
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Materia</th>
            <th scope="col">Sala</th>
            <th scope="col">Data</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

    @* condição para  saber se há registro na tabela *@

        @if(Model != null)
        {
            @foreach(var aluno in Model)
            {
                <tr>
                    <th scope="row">@aluno.Nome</th>
                    <td>@aluno.Materia</td>
                    <td>@aluno.Sala</td>
                    <td>@aluno.DataAula</td>
                    <td>
                            <a asp-controller="Aluno" asp-action="Editar" asp-route-id="@aluno.Id" class="btn btn-warning mx-2"><i class="bi bi-pen-fill mx-2"></i>Editar</a>
                            <a asp-controller="Aluno" asp-action="Excluir" asp-route-id="@aluno.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill mx-2"></i>Excluir</a>
                            @* Adicionando o asp-route="" siginifica que a ação vai ser feita paenas um um registro da tabela apos a ação do botão *@
                    </td>
                    
                </tr>
            }
        }
       
    </tbody>
</table>

</div>