@model Contas_Bancarias

@section Styles {
    <link rel="stylesheet" href="~/css/TelaBancosStyleSheet.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@if (ViewBag.MensagemErro != null)
{
    <div id="mensagem-erro" class="alert alert-danger">
        @ViewBag.MensagemErro
    </div>
}

@if (ViewBag.MensagemSucesso != null)
{
    <div id="mensagem-alert" class="alert alert-success">
        @ViewBag.MensagemSucesso
    </div>
}


<div class="container">
    <div class="card-corpo">
        <h4>Bancos</h4>
        <button id="btn-imprimir" type="button" class="btn btn-primary"><i class="bi bi-printer-fill mx-2"></i>Imprimir</button>
    </div>
    <h3>Contas Bancárias</h3>
    <span>Você poderá alterar ou deletar suas contas bancarias a qualquer momento</span>

    <div class="form-container-conta-principal">
        <fieldset>
            <form asp-controller="Bancos" asp-action="Salvar" method="post">
                <div class="form-container">
                    <legend>Conta Principal</legend>
                    <div class="form-group">
                        <label for="nomeConta">Nome da conta</label>
                        <input type="text" asp-for="Nome_Da_Conta" id="nomeConta" placeholder="Insira o nome da conta">
                        <span class="text-danger" asp-validation-for="Nome_Da_Conta"></span>
                    </div>
                    <div class="form-group">
                        <label for="saldoInicial">Saldo Inicial</label>
                        <input type="text" asp-for="Saldo_Inicial" id="saldoInicial" placeholder="Insira o saldo inicial">
                        <span class="text-danger" asp-validation-for="Saldo_Inicial"></span>
                    </div>
                    <div class="button-group">
                        <button type="submit" class="btn salvar">Salvar</button>
                        <a class="btn excluir">Excluir</a>
                    </div>
                </div>
            </form>
        </fieldset>
    </div>
    <div class="form-container-conta-segundaria">
        <fieldset>
            <form asp-controller="Bancos" asp-action="Salvar" method="post">
                <div class="form-container">
                    <legend>Conta Segundaria</legend>
                    <div class="form-group">
                        <label for="nomeConta">Nome da conta</label>
                        <input type="text" asp-for="Nome_Da_Conta" id="nomeConta" placeholder="Insira o nome da conta">
                        <span class="text-danger" asp-validation-for="Nome_Da_Conta"></span>
                    </div>
                    <div class="form-group">
                        <label for="saldoInicial">Saldo Inicial</label>
                        <input type="text" asp-for="Saldo_Inicial" id="saldoInicial" placeholder="Insira o saldo inicial">
                        <span class="text-danger" asp-validation-for="Saldo_Inicial"></span>
                    </div>
                    <div class="button-group">
                        <button type="submit" class="btn salvar">Salvar</button>
                        <a class="btn excluir">Excluir</a>
                    </div>
                </div>
            </form>
        </fieldset>
    </div>
</div>
<script src="~/js/site.js" asp-append-version="true"></script>
