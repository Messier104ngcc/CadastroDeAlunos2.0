
@model Usuarios

@{
    Layout = null; // Remova o layout principal para a tela de login
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}



<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Achernar - Sistema Pessoal</title>
    <link rel="stylesheet" href="~/css/LoginStyleSheet.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <div class="container">
            <div class="left-panel">
                <div class="social-icons">
                    <a href="https://www.linkedin.com/in/lucas-santos-93508a245/"><img src="https://img.icons8.com/ios/50/linkedin.png" alt="linkedin" /></a>
                    <a href="https://www.facebook.com/messier104ngc4594"><img src="https://img.icons8.com/ios/50/facebook--v1.png" alt="facebook--v1" /></a>
                    <a href="https://github.com/Messier104ngcc"><img src="https://img.icons8.com/glyph-neue/64/github.png" alt="github" /></a>
                </div>
                <div class="logo">
                    <img id="logo" src="~/img/LOGO.png" alt="Logo Achernar">
                </div>
            </div>

            <div class="right-panel">
                <div class="login-box">
                    <div class="forgot-support">
                        <a href="https://api.whatsapp.com/send?phone=5547999756192">Suporte</a>
                        <img src="https://img.icons8.com/external-vitaliy-gorbachev-fill-vitaly-gorbachev/60/external-support-online-shopping-vitaliy-gorbachev-fill-vitaly-gorbachev-2.png" alt="external-support-online-shopping-vitaliy-gorbachev-fill-vitaly-gorbachev-2" />
                    </div>
                    <div class="user-icon">
                        <img width="100" height="100" src="https://img.icons8.com/ios-filled/100/gender-neutral-user.png" alt="gender-neutral-user" />
                    </div>
                    <form asp-controller="Login" asp-action="Entrar" method="post">
                        <div class="form-container">
                            <form>
                                <div class="form-group">
                                    <label for="username"><i class="bi bi-person-fill"></i></label>
                                    <input type="text" asp-for="UserName" id="username" name="username" placeholder="Digite seu usuário" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <label for="senha"><i class="bi bi-key-fill"></i></label>
                                    <input type="password" asp-for="Senha" id="senha" name="senha" placeholder="Digite sua senha" autocomplete="off">
                                </div>
                                <div class="forgot-password">
                                    <a href="#">Esqueceu a senha?</a>
                                </div>
                                <div class="button-group">
                                    <button type="submit" class="btn">Entrar</button>
                                    <a class="btn-cadastrar" type="button" asp-controller="Login" asp-action="Cadastrar">Cadastrar</a>
                                </div>
                                @if (TempData["MensagemSucesso"] != null) @* logica e estilização da mensagem de sucesso apois qualquer alteração nos dados pelo o usuario *@
                                {
                                    <div class="alert alert-success d-flex align-items-center" role="alert">

                                        <symbol id="info-fill" viewBox="0 0 16 16">
                                            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                                            @TempData["MensagemSucesso"]
                                        </symbol>
                                    </div>
                                }

                                @if (TempData["MensagemErro"] != null) @* logica e estilização da mensagem de erro caso qualquer alteração nos dados não tenha exito no salvamento *@
                                {
                                    <div class="alert alert-danger d-flex align-items-center" role="alert">

                                        <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
                                            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                            @TempData["MensagemErro"]
                                        </symbol>
                                    </div>
                                }
                                <footer>
                                    <p>Copyright © 2024 - Todos os direitos reservados</p>
                                </footer>
                            </form>
                        </div>
                    </form>
                    @* <button class="btn-cadastrar">
                        
                    </button> *@
                </div>
            </div>
        </div>
    </header>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
